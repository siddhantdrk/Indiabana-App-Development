<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:padding="16dp">


    <ImageView
        android:id="@+id/shopping_img"
        android:layout_width="60dp"
        android:layout_height="72dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/demo_shopping_item_img" />

    <TextView
        android:id="@+id/product_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_regular"
        android:text="Samsung Galaxy 20A, ultra desbloqueado para todas las operadoras."
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shopping_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ally_name_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/ally"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/shopping_img"
        app:layout_constraintTop_toBottomOf="@+id/product_title_txt" />

    <TextView
        android:id="@+id/commitment_type_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/type_of_commitment"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/shopping_img"
        app:layout_constraintTop_toBottomOf="@+id/ally_name_heading" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="144dp" />

    <TextView
        android:id="@+id/ally_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Adidas LATAM"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/product_title_txt" />

    <TextView
        android:id="@+id/commitment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Saliente(Envias)"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/commitment_type_heading"
        app:layout_constraintTop_toBottomOf="@+id/ally_name" />


</androidx.constraintlayout.widget.ConstraintLayout>