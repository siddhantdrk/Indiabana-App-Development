<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/order_detail_product_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/order_detail_productName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/girl_face" />

        <TextView
            android:id="@+id/order_detail_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/imageView"
            android:fontFamily="@font/roboto_regular"
            android:text="Steffany Salvatore"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/order_detail_rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/order_detail_productName"
            android:layout_alignStart="@+id/order_detail_productName"
            android:progressTint="@color/indiabana_orange"
            android:rating="4"
            android:scaleX="1"
            android:scaleY="1"
            android:stepSize=".1"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <TextView
            android:id="@+id/order_detail_rating_bar_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/order_detail_rating_bar"
            android:layout_alignBottom="@+id/order_detail_rating_bar"
            android:layout_below="@+id/order_detail_productName"
            android:layout_toEndOf="@+id/order_detail_rating_bar"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/roboto_regular"
            android:text="4.5/5"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/order_detail_productAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_detail_rating_bar"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/imageView"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="20dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam."
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/GrayBorderStroke"
            android:layout_below="@+id/order_detail_productAmount"
            />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>