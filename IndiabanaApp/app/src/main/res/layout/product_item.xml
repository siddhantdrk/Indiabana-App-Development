<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#efefef"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/dark_azyl"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/nav_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_mdi_menu" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="INDIABANA"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_mdi_search" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/search_text_card"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:cardCornerRadius="6dp"
                android:elevation="5dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp">

                <EditText
                    android:id="@+id/search_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:hint="Search"

                    android:background="@null"
                    android:drawableLeft="@drawable/mdi_search_black"
                    android:drawableRight="@drawable/mdi_close"
                    android:inputType="text"
                    android:paddingVertical="4dp"
                    android:drawablePadding="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColorHint="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="-30dp"
        android:elevation="0dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            app:fillColor="#FFFFFFFF"
            app:pageColor="#00000000"
            app:radius="4dp"
            app:slideInterval="1000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp" />

        <ImageButton
            android:id="@+id/back_btn"
            android:src="@drawable/ic_back_arrow_white"
            android:layout_marginStart="16dp"
            android:background="@drawable/product_item_button_background"
            android:padding="10dp"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/fav_btn"
            android:src="@drawable/ic_heart_white"
            android:layout_marginStart="16dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:background="@drawable/product_item_button_background"
            android:padding="8dp"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageButton
            android:id="@+id/share_btn"
            android:src="@drawable/ic_share"
            android:layout_marginStart="16dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:background="@drawable/product_item_button_background"
            android:padding="10dp"
            android:layout_marginTop="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:text="Samsung Samsung Galaxy A5 última generación liberado para cualquier operadora"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        />

    <TextView
        android:id="@+id/product_status_text"
        android:layout_width="wrap_content"
        android:paddingStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Estado del producto:"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/product_name"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/product_status"
        android:layout_width="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Nuevo"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/product_name"
        app:layout_constraintStart_toEndOf="@+id/product_status_text"
        />
    
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:paddingStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Vendido por:"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/product_status_text"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/product_seller"
        android:layout_width="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Samsung LATAM"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/product_status_text"
        app:layout_constraintStart_toEndOf="@+id/text2"
        />
    
    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/rating_bar"
        app:layout_constraintTop_toBottomOf="@id/product_seller"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:numStars="5"
        android:rating="4.5"
        android:progressTint="@color/indiabana_orange"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/number_of_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/roboto"
        android:textColor="#000"
        android:text="(55)"
        app:layout_constraintStart_toEndOf="@id/rating_bar"
        app:layout_constraintTop_toTopOf="@id/rating_bar"
        app:layout_constraintBottom_toBottomOf="@id/rating_bar"
        />

    <ImageView
        android:id="@+id/truck"
        android:src="@drawable/ic_mdi_local_shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/number_of_reviews"
        app:layout_constraintTop_toTopOf="@id/number_of_reviews"
        app:layout_constraintBottom_toBottomOf="@id/number_of_reviews"
        />

    <TextView
        android:id="@+id/truck_text"
        android:text="Gratis"
        android:fontFamily="@font/roboto"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/truck"
        app:layout_constraintTop_toTopOf="@id/truck"
        app:layout_constraintBottom_toBottomOf="@id/truck"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:id="@+id/layout_cost"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rating_bar"
        android:layout_marginHorizontal="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:text="$"
            android:textColor="#000"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/price"
            android:textSize="20sp"
            android:fontFamily="@font/roboto"
            android:text="24,066.66"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/price_strike"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"
            android:text="28,066.66"
            android:textColor="#bdbdbd"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/quantity_and_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/quantity_type_layout_background"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_cost">
        <TextView
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_alignParentStart="true"
            android:textColor="#13162D"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/quantity"
            android:layout_marginHorizontal="10dp"
            android:text="01"
            android:fontFamily="@font/roboto"
            android:textColor="#828282"
            android:layout_toEndOf="@+id/minus"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/quantity"
            android:textColor="#13162D"
            android:textSize="25sp"
            />
        <RelativeLayout
            android:id="@+id/color_layout"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ram_layout"
            android:layout_marginEnd="14dp"
            android:paddingVertical="6dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_spinner"
            android:layout_centerVertical="true"
            >
        <Spinner
            android:id="@+id/color_of_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_down_traingle_white"
             />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ram_layout"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/bg_spinner"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        >

        <Spinner
            android:id="@+id/ram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_down_traingle_white"
            />
    </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="14dp"
        android:id="@+id/delivery_time_text"
        android:fontFamily="@font/roboto"
        android:text="Recibe en:"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/quantity_and_type_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginTop="14dp"
        android:id="@+id/delivery_time"
        android:fontFamily="@font/roboto"
        android:text="06 hours approx"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/quantity_and_type_layout"
        app:layout_constraintStart_toEndOf="@id/delivery_time_text"
        app:layout_goneMarginStart="8dp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="18dp"
        android:layout_marginTop="11dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/quantity_type_layout_background"
        app:layout_constraintTop_toBottomOf="@id/delivery_time_text"
        >
        <ImageView
            android:id="@+id/location_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_location_gray"
            />
        <TextView
            android:id="@+id/location"
            android:layout_toRightOf="@+id/location_image"
            android:layout_marginStart="12dp"
            android:text="Calle 2 con 3, casa 225L, San Telmo.\n10020, CABA"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/change_location"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="Cambiar"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="@color/indiabana_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/save_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/address_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:text="Ahorra más"
        android:layout_marginTop="14dp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:id="@+id/bought_together"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/save_more"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:background="@drawable/quantity_type_layout_background"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/demo_cart_item_img"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:text="+"
            android:layout_toRightOf="@+id/image1"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto"
            android:textColor="@color/indiabana_orange"
            android:textSize="40sp"
            android:layout_marginHorizontal="6dp"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/t"
            android:src="@drawable/demo_cart_item_img"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/saved_cost"
            android:textColor="@color/indiabana_orange"
            android:fontFamily="@font/roboto"
            />
        <TextView
            android:id="@+id/saved_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26,071"
            android:textSize="20sp"
            android:layout_marginHorizontal="8dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/next"
            android:textColor="@color/indiabana_orange"
            android:fontFamily="@font/roboto"
            />
        <ImageView
            android:id="@+id/next"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_mdi_keyboard_arrow_right_orange"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/bought_together"
        android:layout_marginTop="12dp"
        android:background="@drawable/desc_background"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/desc_heading"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:text="Descripción del producto"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/description"
            android:fontFamily="@font/roboto"
            android:textColor="#828282"
            android:textSize="10sp"
            android:text="La información publicada aquí corresponde a información publicada por el vendedor, Indiabana no es responsable del contenido en esta sección. "
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/description2"
            android:fontFamily="@font/roboto"
            android:textColor="#333333"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/desc"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. \n\nLorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. \n\nLorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. \n\nLorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/report_post"
            android:layout_marginTop="12dp"
            android:textColor="@color/indiabana_orange"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:layout_gravity="end"
            android:text="Reportar publicación"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/question_heading"
        android:text="Preguntas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/product_description"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <EditText
        android:layout_marginTop="12dp"
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/question_background"
        android:textSize="12sp"
        android:padding="10dp"
        android:gravity="top"
        android:hint="Deja tu pregunta aquí"
        app:layout_constraintTop_toBottomOf="@+id/question_heading"
        android:layout_marginHorizontal="16dp"
        android:textColorHint="#838383"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/question_send"
        app:layout_constraintTop_toBottomOf="@+id/question"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        app:cornerRadius="5dp"
        android:text="Enviar"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:layout_marginVertical="12dp"
        android:paddingVertical="10dp"
        android:backgroundTint="@color/indiabana_orange"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/previous_question_heading"
        android:text="Preguntas y respuestas anteriores"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/question_send"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
