<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#efefef"
    android:paddingTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:id="@+id/question"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing eli?"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/answer"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:textStyle="italic"
        android:text=" ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        android:layout_gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/date"
        android:fontFamily="@font/roboto"
        android:text="10 Nov 2020"
        android:textColor="#828282"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
        <TextView
            android:id="@+id/report"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="@color/indiabana_orange"
            android:text="Reportar"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#828282"
        />

</LinearLayout>