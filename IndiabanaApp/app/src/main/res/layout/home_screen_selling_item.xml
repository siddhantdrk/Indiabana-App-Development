<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:background="@drawable/selling_item_background_rounded"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/item_image"
            android:src="@drawable/demo_shopping_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <ImageButton
            android:id="@+id/fav_btn"
            android:layout_gravity="end|top"
            android:src="@drawable/ic_like"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            />
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="9dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        >
        <TextView
            android:id="@+id/name"
            android:text="Apple AirPods with Charging Case (Lasted..."
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="#000000"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/roboto"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text="Entrega en:"
                android:layout_marginEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#000000"
                android:textSize="10sp"
                android:text="3 hours approx"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/roboto"
                android:textColor="#000000"
                android:textStyle="normal"
                android:textSize="10sp"
                android:text="$"
                android:layout_marginEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textStyle="normal"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="12,546"
                />
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn"
            android:text="Comprar"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:backgroundTint="@color/indiabana_orange"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:paddingVertical="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>